{
  "name": "@itihon/split-pane",
  "version": "0.0.2",
  "description": "Split pane component based on Web Components API",
  "homepage": "https://itihon.github.io/split-pane/",
  "keywords": [
    "split-pane",
    "split",
    "split-grid"
  ],
  "author": "Alexandr Kalabin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itihon/split-pane.git"
  },
  "bugs": {
    "url": "https://github.com/itihon/split-pane/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "browser": "dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:bundle && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly",
    "build:bundle": "vite build",
    "preview": "vite preview",
    "format:check": "prettier {src,test}/**/*.{js,ts,css} --check --no-error-on-unmatched-pattern",
    "format:write": "prettier {src,test}/**/*.{js,ts,css} --write --no-error-on-unmatched-pattern",
    "lint": "eslint",
    "prepare": "husky",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/wicg-file-system-access": "^2023.10.6",
    "cypress": "^14.5.0",
    "cypress-vite": "^1.6.0",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "3.6.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.0",
    "vite": "^7.0.0",
    "vite-plugin-css-injected-by-js": "^3.5.2"
  },
  "lint-staged": {
    "{src,test}/**/*": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "overrides": {
    "vite": "^7.0.0"
  }
}
